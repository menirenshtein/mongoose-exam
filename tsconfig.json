{
    "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
      "outDir": "dist",
      "rootDir": "src",
      "sourceMap": true,
      "module": "Node16",             // You can use ES6 or Node16, depending on your preference
      "noImplicitAny": true,
      "allowJs": true,
      "moduleResolution": "Node16",     // Switch to 'node' for better resolution without needing file extensions
      "esModuleInterop": true,        // Makes importing modules easier and resolves issues
      "lib": ["ES6", "DOM"],
      "target": "ES6",                // ES6 or ES5 target (ES6 is recommended for modern apps)
      "jsx": "react"
    },
    "exclude": ["node_modules", "dist"]
  }
  